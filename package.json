{
  "name": "orbit-wallet",
  "description": "Transactions API with MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed": "ts-node src/scripts/seed.ts",
    "test": "mocha --experimental-modules --es-module-specifier-resolution=node src/tests/**/*.test.js"
  },
  "mocha": {
    "require": [
      "esm"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "mongoose": "^8.9.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/register": "^7.25.9",
    "@types/chai": "^5.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "chai": "^5.1.2",
    "esm": "^3.2.25",
    "jest": "^29.7.0",
    "mocha": "^11.0.1",
    "mongodb-memory-server": "^10.1.3",
    "prettier": "^3.4.2",
    "sinon": "^19.0.2",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "volta": {
    "node": "23.5.0"
  }
}
